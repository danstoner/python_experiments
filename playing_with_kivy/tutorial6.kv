#:import random random

<ScatterTextWidget>:
	orientation: 'vertical'
	TextInput:
		id: my_textinput
		font_size: 150
		size_hint_y: None
		height: 200
		text: 'default'
		# on_text: root.change_label_colour()
		on_text: my_label.color = [random.random() for i in xrange(3)] + [1]
		on_text: label1.color = my_label.color
		on_text: label2.color = my_label.color
	FloatLayout:
		Scatter:
			Label:
				id: my_label
				text: my_textinput.text
				font_size: 150
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: None
		height: 150
		Label:
			id: label1
			text: my_textinput.text[:3][::-1]
			font_size: 100
		Label:
			id: label2
			text: my_textinput.text[-3:][::-1]
			font_size: 100

	